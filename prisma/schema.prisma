generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Distrito {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relationship with Daimoku
  daimokus  Daimoku[]
  
  @@map("distritos")
}

model Daimoku {
  id        String   @id @default(cuid())
  memberCode String?
  memberName String?
  distritoId String
  date DateTime
  minutes Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relationship with Distrito
  distrito  Distrito @relation(fields: [distritoId], references: [id], onDelete: Cascade)
  
  @@map("daimokus")
}
